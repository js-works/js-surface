{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["es7", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    
    "paths": {
      "js-surface": ["src/core/main/index.ts"],
    },
    
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node", "react", "react-dom", "mocha", "chai"
    ]
  },
  "files": [
    "src/core/main/index.ts"
  ]
}
