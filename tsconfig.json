{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["es7", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    
    "paths": {
      "js-surface": ["src/modules/core/main/index.ts"],
    },
    
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node", "react", "react-dom", "mocha", "chai"
    ]
  },
  "files": [
    "src/modules/core/main/index.ts",
    "src/modules/dom/main/index.ts",
    "src/modules/html/main/index.ts",
    "src/modules/svg/main/index.ts",
    "src/modules/use/main/index.ts",
    "src/modules/use2/main/index.ts",
    "src/modules/util/main/index.ts"
  ],

  "include": [
		"./**/src/**/*.ts*"
  ],
}
