{
  "name": "js-surface",
  "version": "0.3.3",
  "license": "LGPL-3.0",
  "homepage": "https://github.com/js-works/js-surface",
  "main": "dist/js-surface.production.js",
  "unpkg": "dist/js-surface.production.js",
  "jsdelivr": "dist/js-surface.production.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "bestzip": "^1.1.6",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "dio.js": "^9.1.0",
    "esdoc": "^1.0.3",
    "eslint": "^3.19.0",
    "js-spec": "^0.1.20",
    "mocha": "^5.1.1",
    "preact-compat": "^3.18.3",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "rollup": "^0.65.0",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^4.0.0-beta.8",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-gzip": "^2.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "shx": "^0.2.2"
  },
  "dependencies": {
    "preact": "^8.3.1",
    "preact-context": "^1.0.3",
    "preact-portal": "^1.1.3"
  },
  "scripts": {
    "clean": "node_modules/.bin/shx rm -rf ./build ./dist",
    "build": "rollup --config ./rollup.config.js",
    "build-demo": "rollup --config ./rollup.demo.config.js",
    "build-demo-watch": "rollup --watch --config ./rollup.demo.config.js",
    "test": "node_modules/.bin/mocha src/test/**/*.js",
    "test-watch": "node_modules/.bin/mocha -w src/test/**/*.js",
    "zipsource": "shx rm -rf ./build/source && shx mkdir -p ./build/source && copyfiles -a ./* ./build/source && shx cp -r ./src ./build/source && shx mkdir -p ./dist/source && cd build/source && bestzip ../../dist/source/source.zip . && cd ../..",
    "dist": "npm run clean && npm run test && npm run build && npm run zipsource"
  }
}
